objects = os_file_test.o os_file.o base_string.o atomic.o align.o
LIBS =
STD = c99
CC = gcc -std=$(STD)
#VPATH = ../common/:../../port/

os_file_test : $(objects)
	$(CC) -o $@ $(LIBS) $(objects)
	
os_file_test.o : os_file_test.c
	$(CC) -c os_file_test.c
os_file.o : ../../port/os_file.h ../../port/os_file.c
	$(CC) -c ../../port/os_file.c
base_string.o : ../../base/base_string.h ../../base/base_string.c
	$(CC) -c ../../base/base_string.c
atomic.o : ../../port/atomic.h ../../port/atomic.c
	$(CC) -c ../../port/atomic.c
align.o : ../../common/align.h ../../common/align.c
	$(CC) -c ../../common/align.c
	
.PHONY : clean
clean : 
	-rm os_file_test $(objects)
